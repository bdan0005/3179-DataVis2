{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Fertility Rate",
  "title": "Fertility Rate Over Time (babies per woman)",
  "data": {
    "url": "https://raw.githubusercontent.com/bdan0005/3179-Week10Homework/refs/heads/main/parallel-fertility-rate.csv"
  },
  "width": 350,
  "height": 230,
  "transform": [
    {"window": [{"op": "count", "as": "index"}]},
    {"fold": ["2012", "2022"]},
    {
      "calculate": "(datum.value - 1.4) / (2.2 - 1.4)",
      "as": "norm_val"
    },
    {
      "calculate": "(datum.value - 1.4) / (2.2 - 1.4) + 0.04",
      "as": "y_offset"
    }
  ],
  "layer": [
    {
      "mark": {"type": "rule", "color": "#ccc"},
      "encoding": {
        "detail": {"aggregate": "count"},
        "x": {"field": "key"}
      }
    },
    {
      "mark": {
        "type": "line",
        "point": {"filled": true, "size": 100}
      },
      "encoding": {
        "color": {
          "type": "nominal", 
          "field": "State/Territory", 
          "scale": {
            "domain": [
              "NSW", 
              "VIC", 
              "QLD", 
              "SA", 
              "WA", 
              "TAS", 
              "NT", 
              "ACT"
            ],
            "range": [
              "#a35252", 
              "#d4c84a", 
              "#76a352", 
              "#5281a3", 
              "#7052a3", 
              "#a3529a", 
              "#e377c2", 
              "#5e5e5e"
            ]
          },
          "legend": {
            "title": "State/Territory"
          }
        },
        "opacity": {
          "condition": {
            "param": "state_highlight",  
            "value": 1
          },
          "value": 0.2
        },
        "detail": {"type": "nominal", "field": "index"},
        "x": {"type": "nominal", "field": "key"},
        "y": {"type": "quantitative", "field": "norm_val", "axis": null},
        "tooltip": [
          {
            "type": "nominal",
            "field": "State/Territory",
            "title": "State/Territory"
          },
          {
            "type": "quantitative",
            "field": "2012",
            "title": "2012 Fertility Rate"
          },
          {
            "type": "quantitative",
            "field": "2022",
            "title": "2022 Fertility Rate"
          }
        ]
      },
      "selection": {  
        "state_highlight": {
          "type": "multi",
          "fields": ["State/Territory"],
          "bind": "legend"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -5,
        "fontSize": 10,
        "color": "black"
      },
      "encoding": {
        "x": {"value": 260}, 
        "y": {"value": 125}, 
        "text": {"value": "Highest: NT"} 
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -5,
        "fontSize": 10,
        "color": "black"
      },
      "encoding": {
        "x": {"value": 260}, 
        "y": {"value": 220}, 
        "text": {"value": "Lowest: ACT"} 
      }
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 0}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"value": "2.2"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 125}
      },
      "layer": [
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 230}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"value": "1.4"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    }
  ],
  "config": {
    "axisX": {
      "domain": false,
      "labelAngle": 0,
      "tickColor": "#ccc",
      "title": null
    },
    "view": {"stroke": null},
    "style": {
      "label": {"baseline": "middle", "align": "right", "dx": 25},
      "tick": {"orient": "horizontal"}
    }
  }
}
