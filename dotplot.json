{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Ranged dot plot for median age of parents over time",
    "title": "Median Age of Parents Over Time",
    "data": {
        "url": "https://raw.githubusercontent.com/bdan0005/3179-DataVis2/refs/heads/main/median-age.csv",
        "format": {
            "type":"csv"
        }
    },
    "transform": [
      {
        "filter": {
          "field": "Parent",
          "oneOf": ["Mother", "Father"]
        }
      },
      {
        "filter": {
          "field": "Year",
          "oneOf": [2000, 2022]
        }
      }
    ],
    "encoding": {
      "x": {
        "field": "Median Age",
        "type": "quantitative",
        "title": "Median age (years)",
        "scale": {
            "domain": [28, 34]
        }
      },
      "y": {
        "field": "Parent",
        "type": "nominal",
        "title": "Parent",
        "axis": {
          "offset": 5,
          "ticks": false,
          "minExtent": 70,
          "domain": false
        }
      }
    },
    "layer": [
      {
        "mark": "line",
        "encoding": {
          "detail": {
            "field": "Parent",
            "type": "nominal"
          },
          "color": {"value": "#c4b1b1"}
        }
      },
      {
        "mark": {
          "type": "point",
          "filled": true
        },
        "encoding": {
          "color": {
            "field": "Year",
            "type": "ordinal",
            "scale": {
              "domain": [2000, 2022],
              "range": ["#c4b1b1", "#9e7070"]
            },
            "title": "Year"
          },
          "size": {"value": 100},
          "opacity": {"value": 1},
          "tooltip": [
            {"field": "Parent", "type": "nominal", "title": "Parent"},
            {"field": "Year", "type": "ordinal", "title": "Year"},
            {"field": "Median Age", "type": "quantitative", "title": "Median Age"}
          ]
        }
      }
    ]
  }