{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Line chart showing Fertility Rate in Australia with tooltips, hover highlighting, and year range selection.",
  "title": "Fertility Rate in Australia Over Time (babies per woman)",
  "width": 600,
  "height": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/bdan0005/3179-DataVis2/refs/heads/main/australia-fertility-births.csv",
    "format": {
      "type": "csv"
    }
  },
  "params": [
    {
      "name": "startYear",
      "value": 1934,
      "bind": {
        "input": "range",
        "min": 1934,
        "max": 2022,
        "step": 1,
        "name": "Start Year: "
      }
    },
    {
      "name": "endYear",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 1934,
        "max": 2022,
        "step": 1,
        "name": "End Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "year(datum.Year) >= startYear && year(datum.Year) <= endYear"
    }
  ],
  "layer": [
    {
      "selection": {
        "hover": {
          "type": "single",
          "fields": ["Year", "Total fertility rate"],
          "on": "mouseover",
          "empty": "none"
        }
      },
      "mark": {
        "type": "line",
        "tooltip": true  
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "axis": {"title": "Year"}
        },
        "y": {
          "field": "Total fertility rate",
          "type": "quantitative",
          "scale": {"domain": [0, 4]},
          "axis": {"title": "Babies per woman"}
        },
        "color": {
          "value": "#c99ba6"
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "size": 50,
        "tooltip": true
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "axis": {"title": "Year", "format": "%Y"}
        },
        "y": {
          "field": "Total fertility rate",
          "type": "quantitative"
        },
        "color": {
          "condition": {
            "selection": "hover",  
            "value": "#d92390"            
          },
          "value": "#c99ba6"
        },
        "tooltip": [  
          {"field": "Year", "type": "temporal", "title": "Year", "timeUnit": "year"},
          {"field": "Total fertility rate", "type": "quantitative", "title": "Fertility Rate"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 11,
        "fontWeight": "bold",
        "dy": 65
      },
      "encoding": {
        "x": {"value": 580},
        "y": {
          "field": "Total fertility rate",
          "type": "quantitative",
          "aggregate": "mean"
        },
        "text": {"value": "COVID-19"}
      }
    }
  ]
}
