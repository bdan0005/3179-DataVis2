{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Line chart with a filter to select between two datasets.",
  "title": "Select Data to Display",
  "width": 400,
  "height": 300,
  "params": [
    {
      "name": "dataset",
      "select": {
        "type": "point",
        "fields": ["graph"],
        "bind": {
          "input": "select",
          "options": ["Births", "Fertility Rate"],
          "name": "Choose a graph: "
        }
      }
    }
  ],
  "transform": [
    {
      "calculate": "datum.graph === 'Births' ? 'Births' : 'Fertility Rate'",
      "as": "graph"
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/bdan0005/3179-DataVis2/refs/heads/main/australia-births.csv",
        "format": {
          "type": "csv"
        }
      },
      "mark": "line",
      "encoding": {
        "x": {"field": "Year", "type": "temporal"},
        "y": {
          "field": "Births registered",
          "type": "quantitative",
          "scale": {"domain": [100000, 400000]}
        },
        "color": {"value": "red"},
        "opacity": {
          "condition": {
            "test": "dataset === 'Births'",
            "value": 1
          },
          "value": 0 
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/bdan0005/3179-DataVis2/refs/heads/main/australia-fertility-rate.csv",
        "format": {
          "type": "csv"
        }
      },
      "mark": "line",
      "encoding": {
        "x": {"field": "Year", "type": "temporal"},
        "y": {
          "field": "Total fertility rate",
          "type": "quantitative",
          "scale": {"domain": [0, 4]}
        },
        "color": {"value": "blue"},
        "opacity": {
          "condition": {
            "test": "dataset === 'Fertility Rate'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}
