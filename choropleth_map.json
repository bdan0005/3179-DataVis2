{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 650,
  "height": 350,
  "title": "Birth rate (births per 1000 population)",
  "config": {
    "view": {
      "stroke": null
    }
  },
  "data": {
    "name": "world",
    "url": "https://raw.githubusercontent.com/bdan0005/3179-Week10Homework/refs/heads/main/ne_110m_admin_0_countries.topojson",
    "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
  },
  "layer": [
    {
      "data": {
        "url": "oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "#f4fafa"}
    },
    {
      "data": {
        "graticule": true
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#d3e1e3",
        "strokeWidth": 0.5
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.ISO_A3",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/bdan0005/3179-Week10Homework/refs/heads/main/crude-birth-rate-cleaned.csv",
              "format": { "type": "csv" }
            },
            "key": "Code",
            "fields": ["BirthRate"]
          }
        },
        {
          "calculate": "datum.BirthRate === '' ? 'Not Available' : datum.BirthRate",
          "as": "BirthRateModified"
        }
      ],
      "selection": {
        "hoveredCountry": {
          "type": "single",
          "fields": ["properties.NAME"],
          "on": "mouseover",
          "empty": "all"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#f4fafa",
        "strokeWidth": 1,
        "tooltip": true
      },
      "encoding": {
        "color": {
          "condition": {
            "test": "datum.BirthRateModified === 'Not Available'",
            "value": "#d3e1e3"
          },
          "field": "BirthRate",
          "type": "quantitative",
          "scale": {
            "scheme": "viridis",
            "reverse": true
          },
          "title": "Births per 1000 people",
          "legend": {
            "orient": "bottom",
            "offset": 0
          }
        },
        "opacity": {
          "condition": {
            "selection": "hoveredCountry",
            "value": 1
          },
          "value": 0.5
        },
        "tooltip": [
          { "field": "properties.NAME", "type": "nominal", "title": "Country" },
          { "field": "BirthRateModified", "type": "nominal", "title": "Birth Rate" }
        ]
      }
    }
  ],
  "projection": { "type": "equalEarth" }
}
